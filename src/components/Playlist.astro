---
import PlayLinkButton from "./PlayLinkButton.astro";
const{cardimg, header, text, New}=Astro.props;

---

<article>
    <img src={cardimg} alt="playlistimg">
    <h2> {header} </h2>
    <p> {text} </p>
    {New &&<p class="new">NEW</p>}
<PlayLinkButton/>
</article>

<style>
    article{
        background-color: rgb(30, 30, 30);
        padding: 30px;
    }
    .new{
        border-radius: 200px;
        background-color: blueviolet;
        color: black;
        padding: 20px;
        text-align: center;
    }
</style>